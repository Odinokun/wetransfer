mixin news-item(title, pic, text)
  //begin news-item
  .news__item.news-item
    .news-item__top
      .news-item__date
        time(datetime="2019-12-09") 09.12.2019
      a(href="article.html").news-item__title #{title}

    a(href="article.html").news-item__img
      img(src="assets/img/news-preview-" + pic + ".jpg" alt="picture")

    .news-item__bottom
      .news-item__descr
        p #{text}

      a(href="article.html").news-item__link Детальніше
  //end news-item


//begin news
.news
  .container
    .news__header.section-header.section-header--violet
      h2.section-header__title#news Новини

    //begin news__items
    .news__items
      +news-item('AMC Ukraine & The Baltics - Новинки', '01', 'Другий сезон “The Son” завершує подорож культового завершує подорож культового')
